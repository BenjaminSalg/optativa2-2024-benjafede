@model SubirArchivoModel
@{
    ViewBag.Title = "Subir Archivo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section>
    <div class="row justify-content-center">
        <div class="col-6 rounded-3  bg-white mt-3">
            @if (TempData["error"] != null)
            {
                <div class="alert alert-danger text-center mt-3">
                    @TempData["error"]
                </div>
                <hr />
            }
            <form action="@Url.Action("SubirArchivo", "Archivos")" method="post" class="mt-3" enctype="multipart/form-data">
                <div class="border border-dark-subtle border-3 rounded p-3">
                    <div class="form-group">
                        <label for="archivoAdjunto" class="form-label">Selecciona un archivo para subir</label>
                        <input class="form-control" type="file" name="ArchivoAdjunto" accept="application/pdf">
                        @Html.ValidationMessage("ArchivoAdjunto", new { })
                    </div>
                    <br />
                    <button type="submit" class="btn btn-success">Subir</button>
                </div>
            </form>
            <br>
        </div>
    </div>
</section>
